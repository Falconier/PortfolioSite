        function pickFive() {
            var one = Number(document.getElementById("v1").value);
            var two = Number(document.getElementById("v2").value);
            var three = Number(document.getElementById("v3").value);
            var four = Number(document.getElementById("v4").value);
            var five = Number(document.getElementById("v5").value);

            var min = Math.min(one, two, three, four, five);
            var max = Math.max(one, two, three, four, five);
            var sum = one + two + three + four + five;
            var avg = sum / 5;
            var product = one * two * three * four * five;

            document.getElementById("list2").innerHTML = "Min: " + min + " Max: " + max + " Average: " + avg + " Sum: " + sum + " Product: " + product;
        }
        function fizzBuzz() {
            var a = Number(fBOne.value);
            var b = Number(fBTwo.value);
            var result = "";

            // review if statements and simplification
            if ((a < 100 && a > 0) && (b < 100 && b > 0)) {
                for (var i = 1; i <= 100; i++) {
                    (function (i) {
                        setTimeout(function () {
                            if (i % a == 0 && i % b == 0)
                                result += "fizzbuzz";
                            else if (i % a == 0)
                                result += "fizz";
                            else if (i % b == 0)
                                result += "buzz";
                            else
                                result += i + " ";

                            document.getElementById("fBResult").innerHTML = result;
                        }, 500);
                    })(i);
                }
            }
            else {
                document.getElementById("fBResult").innerHTML = "Please enter numbers between 1 and 99 only";
            }
            //document.getElementById("fBResult").innerHTML = result;
        }
        function factorial() {
            var a = Number(document.getElementById("fac").value);
            if (a < 0) {
                document.getElementById("facResult").innerHTML = "Please enter positive numbers only";
            }
            else if (a == 0) {
                document.getElementById("facResult").innerHTML = 1;
            }
            else {
                var b = a;
                var result = 1;
                for (a; a != 0; a--) {
                    result *= a;
                }

                document.getElementById("facResult").innerHTML = result;
            }
        }
        function iterator() {
            var start = Number(document.getElementById("starting").value);
            var end = Number(document.getElementById("ending").value);
            var list = "";

            if (start < -250 || end > 250)
            {
                list = "Please enter starting and ending numbers between -250 and 250."
            }
            else
            {
                for (var i = start; i <= end; i += 1) {
                    list += i + " ";
                }
            }
            document.getElementById("lst").innerHTML = list;
        }
    </script>
