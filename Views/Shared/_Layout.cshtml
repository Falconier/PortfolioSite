                var yShift = 0;
                var windowX = $(window).width();
                var windowY = $(window).height();
                xShift = (6000-(windowX / 2)) + 'px';
                yShift = (4000 - (windowY / 2)) + 'px';

                xShift = 6000 - xShift;
                yShift = 4000 - yShift;

